    <!-- header -->
  <%- include('header')%>

  <!-- main -->
  <div class="home">

    <div class="row">

      <!-- LOG IN AREA -->
      <div class="col-12 col-sm-6 text-center">

        <div class="formArea">

          <h4 class="titleForm">Sign In</h4>

          <form action="/login" method="POST">
            <div class="form-group">
              <label for="exampleInputEmail1"></label>
              <input name="email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1"></label>
              <input name="password" type="password" class="form-control" placeholder="Password">
            </div>

            <button type="submit" class="btn btn-info">Confirm</button>
          </form>

        </div>

      </div>

      <!-- SIGN UP AREA -->
      <div class="col-12 col-sm-6 text-center">

        <div class="formArea">
          <h4 class="titleForm">Sign Up</h4>

          <form action="/sign-up" method="POST">
            <div class="form-group">
              <label for="exampleInputUsername"></label>
              <input name='last_name' type="text" class="form-control" placeholder="Name">
            </div>
            <div class="form-group">
              <label for="exampleInputUsername"></label>
              <input name='first_name' type="text" class="form-control" placeholder="FirstName">
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1"></label>
              <input name="email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1"></label>
              <input name="password" type="password" class="form-control"  placeholder="Password">
            </div>

            <button type="submit" class="btn btn-info">Confirm</button>
          </form>
        </div>

      </div>

    </div>
  </div>

  <!-- footer -->
  <%- include('footer')%>